  <body>
    <nav>
      <div class="site-title">
        <a href="/"><h1>Blog</h1></a>
        <p>A Blog Site</p>
      </div>
      <ul>
        <li><a href="/">Blogs</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/blogs/create">New Blog</a></li>
      </ul>
    </nav>
        <div class="create content">

            <form action="/blogs" method="post">
              <label for="title">Blog Title</label>
              <input
                style="width: 200px; height: 20px; align-items: center;"
                type="text"
                id="title"
                name="title"
                required
                placeholder="Title"
                name="title"
                maxlength="20"
              />
              <label for="snippet">Blog Snippet:</label>

              <input  type="text" placeholder="Text" name="snippet" id="snippet"  required/>
              <label for="body" >Blog body:</label>
              <textarea name="body" id="body" cols="30" rows="10" required></textarea>
              <button type="submit">Submit</button>
            </form>
  </body>
</html>
